    <struts>
    	<package name="detail" namespace="/newsDetail" extends="default">
    	<!-- 查询所有 -->
    	<action name="newsList" class="newsDetailAction" method="newsList">
    		<result>/newsDetail.jsp</result>
    	</action>
    	<!-- 查询指定新闻下面的所有评论 -->
    	<action name="findComments" class="newsDetailAction" method="findComments">
    		<result>/newsComment.jsp</result>
    	</action>
    	</package>
    	
    </struts>